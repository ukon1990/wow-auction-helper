{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}